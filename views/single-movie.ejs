<% include head %>


<body>
   
        


        <div class="container" >
                <div id="movie" class="well"></div>
                <div class="row">
                        <div class="col-md-4">
                                <img src="<%= imageBaseUrl + parsedData.poster_path %>" />
                        </div>
                        <div class="col-md-8">
                          <h2><%= parsedData.title %> </h2>
                          <ul class="list-group">
                            <li class="list-group-item"><strong>Overview <br></strong> <%= parsedData.overview %></li>
                            <li class="list-group-item"><strong>Genre:</strong> <%= parsedData.genres[0].name %> </li>
                            <li class="list-group-item"><strong>Released Date:</strong> <%= parsedData.release_date %></li>
                            <li class="list-group-item"><strong>Rated:</strong> <%= parsedData.vote_average %></li>
                            <li class="list-group-item"><strong>Runtime:</strong> <%= parsedData.runtime %> min.</li>

                           
                            
                          </ul>
                        </div>
                      </div>
                      <div class="row">
                        <div class="well">
                        
                          <hr>
                          <a href="http://imdb.com/title/<%= parsedData.imdb_id %>" target="_blank" class="btn btn-primary" >View IMDB</a>

                          <a href="/" class="btn btn-success" >Go Back To Search</a>
                        </div>
                      </div>
              </div>
        
</body>

</html>